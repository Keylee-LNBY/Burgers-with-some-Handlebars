<div>
    <div>
        <img>
        <h1>Eat-Da-Burger</h1>
    </div>
    <div>
        <table>
            <tr>
                <td class="toEat">
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> burgers devoured=false}}
                        {{/unless}}
                    {{/each}}
                </td>
                <td class="devoured">
                    {{#each burgers}}
                        {{#if devoured}}
                            {{>  burgers devoured=true}}
                        {{/if}}
                    {{/each}}
                </td>
            </tr>
        </table>
    </div>
    <div>
        <h2>Add a Burger</h2>
        <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="burgerTextInput" name="burgerName">
        </div>

        <button type="submit">Add Burger</button>
        </form>
    </div>
</div>